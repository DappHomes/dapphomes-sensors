{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES2018",
      "dom"
    ],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.js",
    "**/.*.js",
    "scripts/.common.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
